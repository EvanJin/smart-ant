{
  "name": "smart-ant",
  "displayName": "smart-ant",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-ant.codeIndexing",
        "title": "Smart Ant: 代码索引"
      },
      {
        "command": "smart-ant.searchCode",
        "title": "Smart Ant: 搜索代码"
      }
    ],
    "configuration": {
      "title": "Smart Ant",
      "properties": {
        "smart-ant.openaiApiKey": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "OpenAI API Key"
        },
        "smart-ant.openaiBaseURL": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "OpenAI API Base URL"
        },
        "smart-ant.openaiModel": {
          "type": "string",
          "default": "text-embedding-3-small",
          "enum": [
            "text-embedding-3-small",
            "text-embedding-3-large"
          ],
          "description": "OpenAI 模型"
        },
        "smart-ant.openaiTemperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "OpenAI Temperature (0-2)"
        },
        "smart-ant.openaiMaxTokens": {
          "type": "number",
          "default": 2000,
          "minimum": 1,
          "maximum": 4096,
          "description": "OpenAI Max Tokens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@qdrant/js-client-rest": "^1.15.1",
    "ignore": "^7.0.5",
    "openai": "^6.9.0"
  }
}
